<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewCity">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textViewTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_column="0"
                                android:gravity="center"
                                android:text="12C"
                                android:textColor="@color/textColor"
                                android:textSize="70sp" />

                            <ImageView
                                android:id="@+id/imageViewIcon"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_column="1"
                                tools:srcCompat="@tools:sample/avatars" />

                        </TableRow>


                        <TableRow>

                            <TextView
                                android:id="@+id/textViewFeels"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Feels like 6C"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Clear"
                                android:textColor="@color/textColor" />
                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:id="@+id/tableLayout3"
                        android:layout_width="471dp"
                        android:layout_height="wrap_content"
                        android:shrinkColumns="1"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewDesc">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Min. Temp"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewMin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:text="4567"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Max. Temp"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewMax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Pressure"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewPress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Humidity"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewHumid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Visibility"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewVisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Cloud Cover"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewClouds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="Wind Speed"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewWind"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:fontFamily="sans-serif"
                                android:text="UV index"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/textViewUV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/textColor" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>